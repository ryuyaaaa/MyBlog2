<p id="notice"><%= notice %></p>

<h1>Gs</h1>

<table>
  <thead>
    <tr>
      <th>People</th>
      <th>Name</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gs.each do |g| %>
      <tr>
        <td><%= g.people %></td>
        <td><%= g.name %></td>
        <td><%= g.comment %></td>
        <td><%= link_to 'Show', g %></td>
        <td><%= link_to 'Edit', edit_g_path(g) %></td>
        <td><%= link_to 'Destroy', g, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

